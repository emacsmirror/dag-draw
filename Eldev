;; -*- mode: emacs-lisp; lexical-binding: t -*-

;; Eldev configuration for dag-draw.el

;; Dependencies for development and testing
(eldev-use-package-archive 'melpa)

;; Main package dependencies (required by dag-draw.el and dag-draw-core.el)
(eldev-add-extra-dependencies 'runtime 'dash)
(eldev-add-extra-dependencies 'runtime 'ht)

;; Testing framework
(eldev-add-extra-dependencies 'test 'buttercup)

;; Add test loading roots
(eldev-add-loading-roots 'test "test")
(eldev-add-loading-roots 'test "test/helpers")

(eldev-use-plugin 'maintainer)

;; Linting configuration
(setq eldev-lint-default '(checkdoc package-lint))
